---
import { Image } from "astro:assets";
import { Badge } from "@/components/ui/badge";
import { buttonVariants } from "@/components/ui/button";
import ProfileDecoration from "@/components/ProfileDecoration.astro";

interface Props {
  title: string;
  description: string;
  badge: string;
  cvPath: string;
}
const { title, description, badge, cvPath } = Astro.props;
---

<section class="text-center">
  <div
    class="relative mt-24 min-[420px]:mt-[8rem] min-[490px]:mt-[10rem] max-w-[30rem] mx-auto"
  >
    <Image
      src={import("../assets/images/profile.png")}
      alt="profile"
      loading="eager"
      class="rounded-full w-56 mx-auto mb-10"
    />
    <ProfileDecoration />
  </div>
  <div class="mx-auto">
    <Badge className="mb-3">{badge}</Badge>
    <h1>{title}</h1>
    <p class="lead">{description}</p>
    <div class="mt-3">
      <a class={buttonVariants()} href="mailto:job@piervito.com">
        Get in touch
      </a>
      <a class={buttonVariants({ variant: "outline" })} href={cvPath} download>
        Download CV
      </a>
    </div>
  </div>
</section>

